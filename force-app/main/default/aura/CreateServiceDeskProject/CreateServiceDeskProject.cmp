<aura:component implements="force:lightningQuickAction,force:hasRecordId" >
    <aura:attribute name="baseUrl" type="String" default="https://nexusat.atlassian.net/servicedesk/customer/portal/3/group/61/create/181"/>
    <aura:attribute name="Opportunity" type="Object"/>
    <aura:attribute name="recordLoadError" type="String"/>
    <force:recordData aura:id="recordLoader"
                      fields="Name,
                              Reference_Number__c,
                              Account.Name"
                      recordId="{!v.recordId}"
                      targetFields="{!v.Opportunity}"
                      targetError="{!v.recordLoadError}"
                      recordUpdated="{!c.gotoURL}"
                      />
    
    <div class="slds-is-relative" style="min-height: 200px">
        	<lightning:spinner alternativeText="Loading" size="large"/>
    </div>
</aura:component>